<Page
    x:Class="Padersprinter.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Padersprinter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="30" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Border BorderBrush="AliceBlue" BorderThickness="4" Padding="20">
            <StackPanel>
                <TextBlock Text="Pader-Pander" FontSize="40" Margin="0,0,0,20"></TextBlock>
                <Button Name="ProximitySearch" Margin="0,0,0,5" Click="ProximitySearch_Click" Width="200" Height="40">Umkreissuche</Button>
                <Button Name="WhereIsTheBengel" Margin="0,0,0,5" Click="WhereIsTheBengel_Click" Width="200" Height="40">Wo ist der Bengel?</Button>
                <Button Name="RealTimeStop" Margin="0,0,0,5" Click="RealTimeStop_Click" Width="200" Height="40">Echtzeit Abfahrten</Button>

                <Image Source="Assets/erstklassig.jpg" Height="225" Width="225" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0, 0, 10, 10"></Image>
            </StackPanel>
        </Border>
    </Grid>
</Page>
